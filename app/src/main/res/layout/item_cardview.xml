<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_label_name" />

            <TextView
                android:id="@+id/data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/data_amount"
                android:text="name" />

            <TextView
                android:id="@+id/label_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/label_name"
                android:layout_marginTop="12dp"
                android:text="@string/item_label_amount" />

            <TextView
                android:id="@+id/data_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/label_amount"
                android:layout_alignBottom="@+id/label_amount"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/label_amount"
                android:text="amount" />

            <TextView
                android:id="@+id/label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/label_amount"
                android:layout_marginTop="12dp"
                android:text="@string/item_label_date" />

            <TextView
                android:id="@+id/data_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/label_date"
                android:layout_alignBottom="@+id/label_date"
                android:layout_alignStart="@+id/data_amount"
                android:text="date" />

            <TextView
                android:id="@+id/label_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/label_date"
                android:layout_marginTop="14dp"
                android:text="@string/item_label_member" />

            <TextView
                android:id="@+id/data_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/label_member"
                android:layout_alignBottom="@+id/label_member"
                android:layout_alignStart="@+id/data_date"
                android:text="member" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:srcCompat="@android:drawable/ic_menu_delete"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageButton2"
                android:layout_alignParentTop="true"
                app:srcCompat="@android:drawable/ic_menu_edit" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>